<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrajAc">

    <Button
        android:id="@+id/kat1"
        android:layout_width="156dp"
        android:layout_height="206dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/kat1"
        app:layout_constraintStart_toStartOf="@+id/kat1"
        app:layout_constraintTop_toTopOf="@+id/kat1"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/kat2"
        android:layout_width="156dp"
        android:layout_height="206dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="168dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/kat1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kat3"
        android:layout_width="156dp"
        android:layout_height="206dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kat1" />
</androidx.constraintlayout.widget.ConstraintLayout>